{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "apps/api/prisma/**",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/web/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["lhr1"],
  "installCommand": "npm install",
  "buildCommand": "npm run build:web",
  "outputDirectory": "apps/web/dist"
} 