#!/bin/bash

# RMC Dialler - Pre-push Hook
# Prevents pushing when deployments are active

echo "üîç Checking for active Vercel deployments before push..."

# Check if we have Vercel CLI
if ! command -v vercel &> /dev/null; then
    echo "‚ö†Ô∏è  Vercel CLI not found - install with: npm i -g vercel"
    echo "‚ö†Ô∏è  Proceeding with push, but consider using 'npm run deploy' instead"
    exit 0
fi

# Check for active deployments
ACTIVE_DEPLOYMENTS=$(npx vercel ls 2>/dev/null | grep -E "Building|Queued" || true)

if [ ! -z "$ACTIVE_DEPLOYMENTS" ]; then
    echo "‚ö†Ô∏è  Active deployments detected:"
    echo "$ACTIVE_DEPLOYMENTS"
    echo ""
    echo "‚ùå Push blocked to prevent multiple simultaneous deployments"
    echo "üí° Wait for current deployments to finish, or use 'npm run deploy:force'"
    exit 1
fi

echo "‚úÖ No active deployments - proceeding with push"
exit 0 