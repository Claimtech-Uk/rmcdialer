# Queue Migration Environment Variables
# Copy these to your .env file and configure as needed for your environment

# ============================================================================
# QUEUE MIGRATION FEATURE FLAGS
# ============================================================================

# Phase 1: Infrastructure flags
USE_SEPARATED_QUEUES=false
DUAL_WRITE_QUEUES=false
MIGRATE_TO_NEW_QUEUES=false

# Phase 2: Service layer flags
USE_NEW_QUEUE_SERVICES=false
ENABLE_QUEUE_VALIDATION=true

# Phase 3: Migration control
MIGRATION_MODE=off
# Options: off | dual-write | dual-read | new-only
MIGRATION_BATCH_SIZE=100
MIGRATION_DRY_RUN=true

# Phase 4: Monitoring and safety
ENABLE_MIGRATION_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_DATA_VALIDATION=true

# Phase 5: Emergency controls
EMERGENCY_ROLLBACK=false
DISABLE_NEW_QUEUES=false

# Development and debugging
ENABLE_QUEUE_DEBUG=false
SKIP_MIGRATION_CHECKS=false

# ============================================================================
# ENVIRONMENT-SPECIFIC RECOMMENDATIONS
# ============================================================================

# Development Environment:
# USE_SEPARATED_QUEUES=false
# MIGRATION_DRY_RUN=true
# ENABLE_QUEUE_DEBUG=true
# SKIP_MIGRATION_CHECKS=true

# Staging Environment:
# USE_SEPARATED_QUEUES=false
# ENABLE_MIGRATION_MONITORING=true
# ENABLE_PERFORMANCE_TRACKING=true
# MIGRATION_DRY_RUN=false

# Production Environment:
# USE_SEPARATED_QUEUES=false (until ready)
# ENABLE_MIGRATION_MONITORING=true
# ENABLE_PERFORMANCE_TRACKING=true
# ENABLE_DATA_VALIDATION=true
# MIGRATION_DRY_RUN=false

# ============================================================================
# MIGRATION PHASE PROGRESSION
# ============================================================================

# Phase 1 - Pre-migration (Current):
# MIGRATION_MODE=off
# USE_SEPARATED_QUEUES=false

# Phase 2 - Dual Write:
# MIGRATION_MODE=dual-write
# DUAL_WRITE_QUEUES=true
# USE_SEPARATED_QUEUES=false

# Phase 3 - Dual Read:
# MIGRATION_MODE=dual-read  
# USE_SEPARATED_QUEUES=true
# DUAL_WRITE_QUEUES=true

# Phase 4 - New Only:
# MIGRATION_MODE=new-only
# USE_SEPARATED_QUEUES=true
# DUAL_WRITE_QUEUES=false

# Phase 5 - Cleanup:
# MIGRATION_MODE=new-only
# USE_SEPARATED_QUEUES=true
# (Remove legacy CallQueue table)

# ============================================================================
# SAFETY NOTES
# ============================================================================

# 1. Always test changes in development first
# 2. Enable monitoring before changing any flags in production
# 3. Keep EMERGENCY_ROLLBACK ready for immediate fallback
# 4. Document flag changes and rollback procedures
# 5. Coordinate with team before changing production flags 